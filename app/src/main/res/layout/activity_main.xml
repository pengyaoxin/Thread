<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.s07150738.thread.MainActivity">

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="ANR(Application Not Responsing)"
       android:onClick="anr"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="thread类实现多线程"
        android:onClick="threadclass"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Runable接口实现多线程"
        android:onClick="runnableinterface"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer TimerTask实现多线程"
        android:onClick="timertask"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler消息处理器"
        android:onClick="handlermessage"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask实现异步操作"
        android:onClick="asynctask"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"/>
</LinearLayout>
